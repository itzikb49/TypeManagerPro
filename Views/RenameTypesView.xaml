<UserControl x:Class="TypeManagerPro.Views.RenameTypesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F5F5F5">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ========== INPUT CONTROLS - 2 ROWS Ã— 3 COLUMNS ========== -->
        <Border Grid.Row="0" 
                Background="White"
                Padding="20"
                CornerRadius="5"
                Margin="0,0,0,10"
                BorderBrush="#E0E0E0"
                BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- ===== ROW 1: Category, Prefix, Suffix ===== -->

                <!-- Category -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Category:" VerticalAlignment="Center" 
                           FontWeight="SemiBold" FontSize="14"/>
                <ComboBox Grid.Row="0" Grid.Column="1" Height="34"
                          FontSize="13"
                          VerticalContentAlignment="Center"
                          ItemsSource="{Binding AvailableCategories}"
                          SelectedItem="{Binding SelectedCategory, UpdateSourceTrigger=PropertyChanged}"/>

                <!-- Prefix -->
                <TextBlock Grid.Row="0" Grid.Column="3" Text="Prefix:" VerticalAlignment="Center" 
                           FontWeight="SemiBold" FontSize="14" Margin="10,0,0,0"/>
                <TextBox Grid.Row="0" Grid.Column="4" Height="34"
                         FontSize="13"
                         VerticalContentAlignment="Center"
                         Text="{Binding PrefixText, UpdateSourceTrigger=PropertyChanged}"/>

                <!-- Suffix -->
                <TextBlock Grid.Row="0" Grid.Column="6" Text="Suffix:" VerticalAlignment="Center" 
                           FontWeight="SemiBold" FontSize="14" Margin="10,0,0,0"/>
                <TextBox Grid.Row="0" Grid.Column="7" Height="34"
                         FontSize="13"
                         VerticalContentAlignment="Center"
                         Text="{Binding SuffixText, UpdateSourceTrigger=PropertyChanged}"/>

                <!-- ===== ROW 2: Search, Find, Replace ===== -->

                <!-- Search -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Search:" VerticalAlignment="Center" 
                           FontWeight="SemiBold" FontSize="14"/>
                <TextBox Grid.Row="2" Grid.Column="1" Height="34"
                         FontSize="13"
                         VerticalContentAlignment="Center"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>

                <!-- Find -->
                <TextBlock Grid.Row="2" Grid.Column="3" Text="Find:" VerticalAlignment="Center" 
                           FontWeight="SemiBold" FontSize="14" Margin="10,0,0,0"/>
                <TextBox Grid.Row="2" Grid.Column="4" Height="34"
                         FontSize="13"
                         VerticalContentAlignment="Center"
                         Text="{Binding FindText, UpdateSourceTrigger=PropertyChanged}"/>

                <!-- Replace -->
                <TextBlock Grid.Row="2" Grid.Column="6" Text="Replace:" VerticalAlignment="Center" 
                           FontWeight="SemiBold" FontSize="14" Margin="10,0,0,0"/>
                <TextBox Grid.Row="2" Grid.Column="7" Height="34"
                         FontSize="13"
                         VerticalContentAlignment="Center"
                         Text="{Binding ReplaceText, UpdateSourceTrigger=PropertyChanged}"/>
            </Grid>
        </Border>

        <!-- ========== TYPES LIST WITH SYNCHRONIZED SCROLLING ========== -->
        <Border Grid.Row="1" Background="White" CornerRadius="5" BorderBrush="#E0E0E0" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="3"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Header: All/None + Find Ignore Case -->
                <Border Grid.Row="0" Grid.Column="0" Background="#F0F0F0" Padding="10" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                    <Grid>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <Button Content="âœ“ All" Width="60" Height="26" Margin="0,0,5,0" 
                                    Command="{Binding SelectAllCommand}"/>
                            <Button Content="âœ— None" Width="60" Height="26" 
                                    Command="{Binding DeselectAllCommand}"/>
                        </StackPanel>
                        <CheckBox Content="Find Ignore Case" HorizontalAlignment="Right" VerticalAlignment="Center"
                                  FontSize="13"
                                  IsChecked="{Binding IgnoreCase, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>
                </Border>

                <!-- Vertical Separator (smooth line) -->
                <Border Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" Background="#2C3E50"/>

                <!-- Right Header: Preview -->
                <Border Grid.Row="0" Grid.Column="2" Background="#E3F2FD" Padding="10" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                    <TextBlock Text="ðŸ‘ï¸ Preview" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center" Foreground="#1976D2"/>
                </Border>

                <!-- SINGLE ScrollViewer for synchronized scrolling -->
                <ScrollViewer Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" 
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="3"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left Column: Original Names with Checkboxes -->
                        <ItemsControl Grid.Column="0" ItemsSource="{Binding FilteredTypes}" Padding="8">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding OriginalName}" 
                                              IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                              FontFamily="Consolas" FontSize="13"
                                              Padding="0,0,0,3"
                                              Margin="0,2" Height="36" VerticalContentAlignment="Center"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Vertical Separator (smooth line) -->
                        <Border Grid.Column="1" Background="#2C3E50"/>

                        <!-- Right Column: Preview with Conditional Color Coding -->
                        <ItemsControl Grid.Column="2" ItemsSource="{Binding FilteredTypes}" Padding="8" Background="#FAFAFA">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Height="36" Padding="5,0" BorderBrush="#E8E8E8" BorderThickness="0,0,0,1">
                                        <Grid VerticalAlignment="Center">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="25"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Arrow - changes color based on state -->
                                            <TextBlock Grid.Column="0" Text="â†’" FontSize="14" FontWeight="Bold" 
                                                       HorizontalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="#BDC3C7"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding WillChange}" Value="True">
                                                                <Setter Property="Foreground" Value="#2196F3"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding HasError}" Value="True">
                                                                <Setter Property="Foreground" Value="#E74C3C"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>

                                            <!-- New Name - color coded: Black/Green/Red -->
                                            <TextBlock Grid.Column="1" Text="{Binding NewName}" 
                                                       FontFamily="Consolas" FontSize="13" 
                                                       TextTrimming="CharacterEllipsis">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <!-- Default: Black for unchanged items -->
                                                        <Setter Property="Foreground" Value="Black"/>
                                                        <Setter Property="FontWeight" Value="Normal"/>
                                                        <Style.Triggers>
                                                            <!-- Green for valid changes -->
                                                            <DataTrigger Binding="{Binding WillChange}" Value="True">
                                                                <Setter Property="Foreground" Value="#27AE60"/>
                                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                                            </DataTrigger>
                                                            <!-- Red for errors (duplicate names, etc.) -->
                                                            <DataTrigger Binding="{Binding HasError}" Value="True">
                                                                <Setter Property="Foreground" Value="#E74C3C"/>
                                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- ========== FOOTER ========== -->
        <Border Grid.Row="2" Background="#34495E" Padding="15,10" Margin="0,10,0,0" CornerRadius="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Statistics -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Foreground="White" FontSize="12" Margin="0,0,15,0">
                        <Run Text="ðŸ“Š Total:" FontWeight="SemiBold"/>
                        <Run Text="{Binding TotalCount, Mode=OneWay}"/>
                    </TextBlock>
                    <TextBlock FontSize="12" Margin="0,0,15,0">
                        <Run Text="âœ“ Selected:" FontWeight="SemiBold" Foreground="#4CAF50"/>
                        <Run Text="{Binding SelectedCount, Mode=OneWay}" Foreground="#4CAF50"/>
                    </TextBlock>
                    <TextBlock FontSize="12">
                        <Run Text="ðŸ“ Will change:" FontWeight="SemiBold" Foreground="#FF9800"/>
                        <Run Text="{Binding WillChangeCount, Mode=OneWay}" Foreground="#FF9800"/>
                    </TextBlock>
                </StackPanel>

                <!-- Buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="ðŸ“¥ IMPORT" Width="100" Height="36" Margin="0,0,10,0"
                            Background="#4CAF50" Foreground="White" BorderThickness="0" FontSize="12" FontWeight="Bold"
                            Command="{Binding ImportCommand}"/>
                    <Button Content="ðŸ“¤ EXPORT" Width="100" Height="36" Margin="0,0,10,0"
                            Background="#2196F3" Foreground="White" BorderThickness="0" FontSize="12" FontWeight="Bold"
                            Command="{Binding ExportCommand}"/>
                    <Button Content="âœ“ EXECUTE" Width="110" Height="36"
                            Background="{Binding ExecuteButtonColor}" Foreground="White" BorderThickness="0" FontSize="13" FontWeight="Bold"
                            Command="{Binding ExecuteCommand}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
