<Window x:Class="TypeManagerPro.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:TypeManagerPro.Views"
        Title="Type Manager Pro - IB-BIM" 
        Height="750" Width="900"
        MinHeight="600" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Window.Resources>
        <!-- Button Hover Style -->
        <Style TargetType="Button">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Opacity" Value="0.7"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Content -->
        </Grid.RowDefinitions>

        <!-- ==================== HEADER ==================== -->
        <Border Grid.Row="0" 
                Background="#2C3E50"
                Padding="15,10"
                BorderThickness="0,0,0,1"
                BorderBrush="#34495E">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left: Title + Version -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ”§" FontSize="20" Margin="0,0,8,0"/>
                    <TextBlock Text="Type Manager Pro" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Foreground="White"
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="VersionText"
                               Text="Ver. 1.0.0" 
                               FontSize="11" 
                               Foreground="#95A5A6"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"/>
                </StackPanel>

                <!-- Center: Credit -->
                <TextBlock Grid.Column="1" 
                           Text="Developed by: Â© IB-BIM, Itzik Bajarano"
                           FontSize="11" 
                           Foreground="#95A5A6"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>

                <!-- Right: Help + Close buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="HelpButton"
                            Content="â“ Help"
                            Width="70" Height="30"
                            Background="#3498DB"
                            Foreground="White"
                            BorderThickness="0"
                            Margin="0,0,8,0"
                            Click="HelpButton_Click"/>
                    <Button x:Name="CloseButton"
                            Content="âœ• Close"
                            Width="70" Height="30"
                            Background="#E74C3C"
                            Foreground="White"
                            BorderThickness="0"
                            Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ==================== TAB CONTROL ==================== -->
        <TabControl Grid.Row="1" 
                    Margin="0"
                    BorderThickness="0"
                    Background="#F5F5F5">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border" 
                                        Background="#ECF0F1"
                                        BorderBrush="#BDC3C7"
                                        BorderThickness="1,1,1,0"
                                        CornerRadius="5,5,0,0"
                                        Margin="2,0,0,0"
                                        Padding="15,8">
                                    <ContentPresenter ContentSource="Header"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#F5F5F5"/>
                                        <Setter TargetName="Border" Property="BorderBrush" Value="#2C3E50"/>
                                        <Setter TargetName="Border" Property="BorderThickness" Value="1,2,1,0"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#D5DBDB"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>

            <!-- Tab 1: Rename Types -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="âœï¸" FontSize="14" Margin="0,0,5,0"/>
                        <TextBlock Text="Rename Types" FontSize="13" FontWeight="SemiBold"/>
                    </StackPanel>
                </TabItem.Header>
                <local:RenameTypesView x:Name="RenameTypesViewControl"/>
            </TabItem>

            <!-- Tab 2: Placeholder for future features -->
            <TabItem IsEnabled="False">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ“‹" FontSize="14" Margin="0,0,5,0"/>
                        <TextBlock Text="Manage Parameters" FontSize="13" FontWeight="SemiBold" Foreground="#95A5A6"/>
                    </StackPanel>
                </TabItem.Header>
            </TabItem>

            <!-- Tab 3: Placeholder for future features -->
            <TabItem IsEnabled="False">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ”„" FontSize="14" Margin="0,0,5,0"/>
                        <TextBlock Text="Batch Operations" FontSize="13" FontWeight="SemiBold" Foreground="#95A5A6"/>
                    </StackPanel>
                </TabItem.Header>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
